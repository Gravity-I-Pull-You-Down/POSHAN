<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NRCActivity">

    <Button
        android:id="@+id/nrc_current_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="50dp"
        android:text="Current Referrals" />

    <Button
        android:id="@+id/nrc_admitted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="50dp"
        android:text="Admitted" />

    <Button
        android:id="@+id/nrc_followups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="50dp"
        android:text="Followups" />

    <Button
        android:id="@+id/nrc_past_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="50dp"
        android:text="Past Records" />

    <Button
        android:id="@+id/nrc_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginHorizontal="50dp"
        android:text="Settings" />

</LinearLayout>